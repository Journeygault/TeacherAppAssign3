@model TeacherAppAssign3.Models.Teacher

@{
    ViewBag.Title = "Update";
}
<!--The following is basicaly the same form as the add section, -->
<nav>
    <a class="navlink" href="/Teacher/Show/@Model.Teacherid">Back</a>
</nav>
<h2>Update Teacher Information</h2>
<form method="POST" action="/Teacher/Update/@Model.Teacherid">
    <div>
        <label for="TeacherFname">First Name</label>
        <input type="text" id="TeacherFname" name="TeacherFname"
               value="@Model.Teacherfname" />
    </div>
    <div>
        <label for="TeacherLname">Last Name</label>
        <input type="text" id="TeacherLname" name="TeacherLname"
               value="@Model.Teacherlname" />
    </div>
    <div>
        <label for="Employeenumber">Employee Number</label>
        <input type="text" id="Employeenumber" name="Employeenumber"
               value="@Model.Employeenumber" />
    </div>
    <div>
        <label for="Hiredate">Hire Date</label>
        <input type="date" id="Hiredate" name="Hiredate"
               value="@Model.Hiredate" />
    </div>
    <div>
        <label for="Salary">Salary ($ an hour)</label>
        <input type="number" id="Salary" name="Salary"
               value="@Model.Salary" />
    </div>
    <div>
        <input type="submit" value="Update Teacher" />
    </div>
</form>